{
  "ava": {
    "require": [
      "esm"
    ]
  },
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run js -- -d -w & npm run css -- -w -v & npm run static -- -w &  http-server dist",
