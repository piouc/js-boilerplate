    "autoprefixer": "^9.1.5",
    "ava": "^1.0.0-beta.8",
    "babel-loader": "^8.0.2",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.0",
    "esm": "^3.0.82",
    "http-server": "^0.11.1",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "postcss-import": "^12.0.0",
    "postcss-nested": "^4.0.0",
    "postcss-sorting": "^4.0.0",
