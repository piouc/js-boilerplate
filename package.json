    "static": "cpx 'src/static/**/*' dist",
    "js": "webpack --config webpack.config.js",
    "css": "postcss --no-map -u postcss-import -u postcss-nested -u autoprefixer -u postcss-sorting -o dist/index.css src/css/index.css",
    "test": "ava"
  },
  "keywords": [],
