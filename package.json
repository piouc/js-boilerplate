{
  "ava": {
    "require": [
      "esm"
    ]
  },
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run js -- -d -w & npm run css -- --verbose -w & npm run static --verbose -w &  http-server dist",
    "build": "rm -rf ./dist/* && npm run static && npm run js -- -p & npm run css -- -u cssnano",
    "static": "babel --copy-files --out-dir dist src/static",
    "js": "webpack",
    "css": "postcss --no-map -u postcss-import -u postcss-nested -u autoprefixer -u postcss-sorting -o dist/index.css src/css/index.css",
    "test": "ava"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "autoprefixer": "^9.7.3",
    "ava": "^2.4.0",
    "babel-loader": "^8.0.6",
    "cssnano": "^4.1.10",
    "esm": "^3.2.25",
    "http-server": "^0.12.1",
    "postcss": "^7.0.26",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "postcss-sorting": "^5.0.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
